<?xml version="1.0" encoding="utf-8" ?>
<DSCConfiguration>
    <Environment 	Name="Production">
	<Description>Production Environment DSC Setup. DSC Pull Servers Available.</Description>
	<PullServers>
		<Server Name="PullServer1"
			DownloadManagerType="WEB"
			URL="http://PullServer1:8080/PSDSCPullServer.svc"
			AllowUnsecureConnection="true"
			/>
		<Server Name="PullServer2"
			DownloadManagerType="WEB"
			URL="https://PullServer2:8080/PSDSCPullServer.svc"
			AllowUnsecureConnection="false"
			/>
		<Server Name="PullServer3"
			DownloadManagerType="SMB"
			URL="\\PullServer3\DSCConfig\"
			/>
		</Server>
	</PullServers>
	<Configurations>
	</Configurations>
	<LCMConfigurations>
		<Config	Name="PullServer1"
			RefreshMode="Pull"
			PullServer="PullServer1"
			ConfigurationMode="ApplyAndAutoCorrect"
			RebootNodeIfNeeded="True"
			AllowModuleOverwrite="True"
			ConfigurationModeFrequencyMins="15"
			RefreshFrequencyMins="30"
			CertificateID=""
			Credential=""
			/>
	</LCMConfigurations>
	<Nodes>
		<Node
			Name="Node1"
			LCMConfig="PullServer1"
			ConfigurationID="7b823249-d7cd-471b-8ed7-ed99717c8157"
			/>
		<Node
			Name="Node2"
			LCMConfig="PullServer2"
			ConfigurationID="ed594fef-5a1b-44b9-972c-5f5b04d6e410"
			/>
		<Node
			Name="Node3"
			LCMConfig="PullServer3"
			ConfigurationID="fc98dfc3-1e6e-407b-94bc-321b515cf64e"
			ConfigurationMode="ApplyOnly"
			/>
	</Nodes>
    </Environment>
    <Environment 	Name="Test">
	<Description>Test Environment DSC Setup. DSC Push Only.</Description>
	<Configurations>
	</Configurations>
	<LCMConfigurations>
		<Config	Name="Push"
			RefreshMode="Push"
			ConfigurationMode="ApplyAndAutoCorrect"
			RebootNodeIfNeeded="True"
			AllowModuleOverwrite="True"
			/>
	</LCMConfigurations>
	<Nodes>
		<Node
			Name="Node1"
			LCMConfig="Push"
			/>
	</Nodes>
    </Environment> 
</DSCConfiguration>